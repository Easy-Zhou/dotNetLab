
@{
    ViewBag.Title = "用户修改";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
    Shop.Models.T_Shop_Order order = ViewBag.order;
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="/admin/ManagerOrder/updateSave" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>订单号</label>
                                <input class="form-control" type="text" placeholder="Enter user name" readonly="readonly" value="@order.Id">
                            </div>
                            <div class="form-group">
                                <label>商品名</label>
                                <input class="form-control" placeholder="Enter Product Name" readonly="readonly" value="@order.T_Shop_Product.ProductName">
                                <input type="hidden" class="form-control" id="id" name="id" value="@order.Id" />
                            </div>
                            <div class="form-group">
                                <label>用户姓名</label>
                                <input class="form-control" type="text" placeholder="Enter user name" id="username" name="username" value="@order.T_Base_Address.Name">
                            </div>
                            <div class="form-group">
                                <label>手机号</label>
                                <input class="form-control" type="text" placeholder="Enter Phone Number" id="phoneNumber" name="phoneNumber" value="@order.T_Base_Address.PhoneNumber">
                            </div>
                            <div class="form-group">
                                <label>地址</label>
                                <input class="form-control" type="text" placeholder="Enter Address" id="Address" name="Address" value="@order.T_Base_Address.Address">
                            </div>
                            <div class="form-group">
                                <label>价格</label>
                                <input class="form-control" type="number" placeholder="Enter Price" id="price" name="price" value="@order.Price">
                            </div>
                            <button type="submit" class="btn btn-default">提交</button>
                        </form>
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

