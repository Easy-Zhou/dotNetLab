@{ 
    Shop.Models.T_Base_User user = null;
    if (Session["ticket"] != null)
    {
        user = (Shop.Models.T_Base_User)Session["ticket"];
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0px;
            padding: 0px;
        }

        header {
            /*padding: 5px;*/
            height: 40px;
            background: red;
            line-height: 40px;
            text-align: center;
            position: relative;
            width: 100%;
            /*overflow:hidden;*/
        }

        footer {
            height: 40px;
            background: red;
            line-height: 40px;
            text-align: center;
            position: fixed;
            bottom: 0px;
            width: 100%;
        }

        img {
            width: 100%;
        }
        #go_back {
            position: absolute;
            left: 5px;
            top: 0px;
            font-size: 30px;
            height: 38px;
            background: red;
            border: none;
            color: cornsilk;
        }
    </style>
    @RenderSection("css", false)
</head>
<body>
    <div>
        <header>
            @{
                if (ViewBag.Title != "2018商城")
                {
                    <p id="go_back" onclick="go_back()"><</p>
                }
            }
            @ViewBag.Title
            @{
                if (ViewBag.Title == "用户登陆" || ViewBag.Title == "用户注册")
                {

                }
                else if (user == null)
                {

                    <a class="btn btn-primary" style="position:absolute;right:5px;top:3px; " href="~/User/Login">登录/注册</a>
                }
                else
                {
                    <div style="position:absolute;right:5px;top:0px; ">
                        @user.Username
                        <a class="btn btn-primary" href="/User/Logout">注销</a>
                    </div>
                }
            }

        </header>
        <div class="container" style="padding:0px;margin:0px">
            @RenderBody()
        </div>
        <footer>版本所有</footer>
    </div>
    <!-- jQuery (Bootstrap 的所有 JavaScript 插件都依赖 jQuery，所以必须放在前边) -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@1.12.4/dist/jquery.min.js"></script>
    <!-- 加载 Bootstrap 的所有 JavaScript 插件。你也可以根据需要只加载单个插件。 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"></script>
    <script>
        function go_back() {
            history.back();
        }
    </script>
    @RenderSection("javascript", false)

</body>
</html>



 