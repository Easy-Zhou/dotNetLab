
@{
    ViewBag.Title = "商品列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Shop.Models.T_Shop_Product> tmp = ViewBag.lst;
    if (Session["ticket"] == null){ViewBag.login = 1;}
    else{ViewBag.login = 0;}
}

<div style="padding:5px">
    @{ 
        foreach(Shop.Models.T_Shop_Product item in tmp)
        {
    <div class="media">
        <a  onclick="checkIsLoging(@item.Id)" style="text-decoration:none;color:black">
            <div class="media-left">
                <img class="media-object" style="width:64px;height:80px" src="~/Content/img/@item.PicUrl" alt="...">
            </div>
            <div class="media-body">
                <h4 class="media-heading">@item.ProductName</h4>
               
                <p style="margin:15px 0px 0px 0px;"><span style="color:red;font-size:20px;">￥@item.price</span> &nbsp;&nbsp;&nbsp;<span> 已售：@item.SelledAmount 件</span></p>
            </div>
        </a>
    </div>
        }
    }
</div>

@section javascript{
    <script>
        function checkIsLoging(Id) {
            if (@ViewBag.login == 1) {
                alert("请先登录")
                window.location.href = "/user/login";
            }
            else {
                window.location.href = "/shop/detail?Id=" + Id;
            }
        }
    </script>    
}
