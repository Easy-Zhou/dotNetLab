
@{
    ViewBag.Title = "2018商城";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Shop.Models.T_Shop_Category> tmp = ViewBag.lst;
}

@Html.Partial("~/Views/Shared/_AD.cshtml")

<div>
    @{
        foreach (Shop.Models.T_Shop_Category item in tmp)
        {
            <span class="label label-info col-xs-3" style="margin:3px"><a href="~/Shop/List?CategoryId=@item.Id" style="font-size:15px;line-height:20px;color:aliceblue">@item.CategoryName</a></span>
        }
    }

</div>

