
@{
    ViewBag.Title = "2018商城";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Shop.Models.T_Shop_Category> tmp = ViewBag.lst;
}

@Html.Partial("~/Views/Shared/_AD.cshtml")

<div>
    <ul id="menu">
        @{
            foreach (Shop.Models.T_Shop_Category item in tmp)
            {
                <li>
                    @*<a href="~/Shop/List?CategoryId=@item.Id" style="font-size:15px;line-height:20px;color:aliceblue">@item.CategoryName</a>*@
                    <a href="~/Shop/List?CategoryId=@item.Id" style="text-decoration:none">
                        <img class="img-circle" src="~/Content/img/@item.PicUrl" />
                        <p>@item.CategoryName</p>
                    </a>
                </li>
            }
        }
    </ul>
</div>

