@section css{
    <style>
        img {
            height: 260px;
        }
    </style>
    <style type="text/css">
        #menu {
            list-style-type: none;
            margin: 0px;
            padding: 0px;
        }

            #menu li {
                border: none;
                width: 25%;
                height: 90px;
                float: left;
                box-sizing: border-box;
                text-align: center;   
                padding: 5px 0;
            }

                #menu li img {
                    width: 50px;
                    height: 50px;
                }

                #menu li p {
                    color:cadetblue;
                    margin: 5px;
                }
    </style>
}
